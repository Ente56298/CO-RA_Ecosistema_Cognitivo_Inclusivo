# Configuración del Generador de Videos CO-RA
# Copia este archivo como .env y completa con tus datos

# OpenAI API Key (requerido)
OPENAI_API_KEY=tu_api_key_aqui

# Dominios oficiales verificados (opcional - usa los por defecto si no se especifica)
OFFICIAL_DOMAINS=.gov,.edu,.who.int,.un.org,.worldbank.org,.gob.mx,.inegi.org.mx,.imf.org,.oecd.org

# Música de fondo (opcional)
# Ruta a archivo MP3 libre de derechos
BGMUSIC_PATH=./music/background.mp3

# Configuración de video (opcional)
VIDEO_FPS=30
VIDEO_RESOLUTION=1920x1080
AUDIO_BITRATE=128k

# Configuración de TTS (opcional)
TTS_VOICE=nova
TTS_SPEED=0.9